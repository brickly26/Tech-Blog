<h2>{{username}}'s Posts:</h2>
{{#each posts as |post|}}
<div class="card mb-3">
  <div class="card-header">
    {{post.title}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.body}}</p>
      <footer class="blockquote-footer">{{post.user.username}} posted on <cite title="Source Title">{{format_date post.createdAt}}</cite></footer>
    </blockquote>
    <button id="update" data-post="{{post.id}}" class="btn btn-info btn-sm">Update</button>
    <button id="delete" data-post="{{post.id}}" class="btn btn-danger btn-sm">Delete</button>
  </div>
  <form class="update-form m-3" data-post="{{post.id}}" style="display:none;">
    <div class="form-group m-3">
      <label for="Title">New Title</label>
      <input class="form-control" id="Title">
    </div>
    <div class="form-group m-3">
      <label for="Body">New Body</label>
      <input class="form-control" id="Body">
      <p class="mt-3" id="update-message"> </p>
    </div>
    <button type="submit" class="btn btn-info m-3">Update</button>
  </form>
</div>
{{/each}}
<h2>New Posts:</h2>
<div class="card">
  <form class="new-post m-2">
    <div class="form-group m-3">
      <label for="title">Post Title</label>
      <input class="form-control" id="title" aria-describedby="emailHelp">
    </div>
    <div class="form-group m-3">
      <label for="body">Post Body</label>
      <input class="form-control" id="body">
      <p class="mt-3" id="message"></p>
    </div>
    <button type="submit" class="btn btn-primary m-3">New Post</button>
  </form> 
</div>
<script type="text/javascript" src="./js/dashboard.js"></script>