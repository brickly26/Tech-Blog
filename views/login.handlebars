<div class="card">
  <form class="login-form m-3">
    <div class="form-group m-3">
      <h2>Login</h2>
    </div>
    <div class="form-group m-3">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
    </div>
    <div class="form-group m-3">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password">
      <p class="mt-3" id="login-message">Must be 8+ Characters in Length</p>
    </div>
    <button type="submit" class="btn btn-primary btn-lg m-3">Login</button>
    <a href="/register" class="btn btn-outline-secondary btn-lg m-3">Register</a>
  </form>
</div>
<script type="text/javascript" src="./js/login.js"></script>